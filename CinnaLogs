<body>
  <div id="logContainer"></div>
  <button id="generateLogBtn">Generate Funny Logs</button>

  <script>
    const logContainer = document.getElementById('logContainer');
    const generateBtn = document.getElementById('generateLogBtn');

    // Sample funny logs with types
    const logs = [
      { type: 'info', text: "[10:23:17] System boot initiated..." },
      { type: 'info', text: "[10:23:20] PaintApp launched. Memory usage: 13.4MB." },
      { type: 'warning', text: "[10:23:25] Warning: ChatApp sent 146 emojis in 1 second." },
      { type: 'error', text: "[10:23:30] Critical: PaintApp crashed after rendering 87 layers of grass. Too many masterpieces detected." },
      { type: 'warning', text: "[10:24:00] ChatApp attempted to flirt with Notepad. Response: \"I'm not that type of app.\"" },
      { type: 'info', text: "[10:24:20] Calendar synced. Found 0 real events. Sad." },
      { type: 'info', text: "[10:25:00] Terminal opened. User typing like they know what they’re doing." },
      { type: 'error', text: "[10:25:30] Terminal command \"sudo make me a sandwich\" failed. Permission denied." },
      { type: 'info', text: "[10:26:10] Notepad launched. Ready to hold your secrets." },
      { type: 'warning', text: "[10:26:45] ChatApp sent 67 stickers in a row. Possible emotional meltdown." },
      { type: 'info', text: "[10:27:10] PaintApp out of blue pixels. Sky rendering incomplete." },
      { type: 'error', text: "[10:27:55] Critical: User attempted to open VirusSim.exe. Abort mission!" }
    ];

    function addLog(log) {
      const p = document.createElement('p');
      p.textContent = log.text;
      p.className = `log-${log.type}`;
      logContainer.appendChild(p);
      logContainer.scrollTop = logContainer.scrollHeight;
    }

    generateBtn.addEventListener('click', () => {
      // Pick 3–5 random logs per click
      const count = Math.floor(Math.random() * 3) + 3;
      for (let i = 0; i < count; i++) {
        const log = logs[Math.floor(Math.random() * logs.length)];
        addLog(log);
      }
    });

    // Optional: add some initial logs on page load
    logs.slice(0, 4).forEach(addLog);
  </script>
</body>
